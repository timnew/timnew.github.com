$line-indicator
  padding: 0 0 0 1em
  position: relative

  &:after
    content: ""

    padding: 0
    margin: 0

    position: absolute
    top: 0
    bottom: 0
    left: 0

    box-sizing: border-box
    width: 5px
    border-radius: 2px

    box-shadow: inset 0 1px 1px rgba(0,0,0,0.5), 0 1px 1px rgba(255,255,255,0.3)

    transition: background .5s

hueOffset(color, offset)
  hsla(hue(color) + offset, saturation(color),lightness(color), alpha(color))

line-indicator(color, hoverColor = hueOffset(color, -25deg))
  @extend $line-indicator

  &:after
    background: color

  &:hover
    &:after
      background: hoverColor
