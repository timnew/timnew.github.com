if sidebar is bottom
  @import "sidebar-bottom"
else
  @import "sidebar-aside"

.widget
  @extend $base-style
  line-height: line-height
  word-wrap: break-word
  font-size: 0.9em
  ul, ol
    list-style: none
    margin: 0
    ul, ol
      margin: 0 20px
    ul
      list-style: disc
    ol
      list-style: decimal


.category-list-count
.tag-list-count
.archive-list-count
  padding-left: 5px
  color: color-grey
  font-size: 0.85em
  &:before
    content: "("
  &:after
    content: ")"


$item
  border-radius: 2px
  material-hover-z-index: 1
  padding: 2px 5px

$li-item
  @extend $item
  a:hover
    text-decoration: none

$a-item
  @extend $item

  &:hover
    text-decoration: none

.tagcloud a
  @extend $a-item
  margin-right: 5px

.recent-posts li
  @extend $li-item

.category-list li a
  @extend $a-item

.archive-list li
  @extend $li-item

.tag-list li
  @extend $li-item
