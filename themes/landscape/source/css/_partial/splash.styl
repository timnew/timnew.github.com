transition-time = 1.2s

#container
  #header
    transition: height transition-time

    #header-title
      transition: top transition-time

    #banner
      transition: filter transition-time

    #splash-nav
      transition: opacity transition-time

  &.splash
    #header
      height: 100%

      .splash-only
        opacity: .8

      #header-title
        top: 80%

      #banner
        filter: none

      #splash-nav
        opacity: 1
